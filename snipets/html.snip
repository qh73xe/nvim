# Autocomplete
snippet    v-autocomplete
alias vac
  <v-autocomplete
    v-model="item"
    :items="selects"
    chips
    label="Select"
    item-text="text"
    item-value="value"
  >
    <template slot="selection" slot-scope="data">
      <v-chip class="chip--select-multi">
        <v-avatar>
          <img :src="data.item.avatar">
        </v-avatar>
        {{ data.item.text }}
      </v-chip>
    </template>
    <template slot="item" slot-scope="data">
      <template>
        <v-list-tile-avatar>
          <img :src="data.item.avatar">
        </v-list-tile-avatar>
        <v-list-tile-content>
          <v-list-tile-title v-html="data.item.text" />
          <v-list-tile-sub-title v-html="data.item.contents" />
        </v-list-tile-content>
      </template>
    </template>
  </v-autocomplete>
# selects
