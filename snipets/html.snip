snippet    v-input-time
  <v-menu
    ref="menu"
    :close-on-content-click="false"
    v-model="menu"
    :nudge-right="40"
    :return-value.sync="time"
    lazy
    transition="scale-transition"
    offset-y
    full-width
    max-width="290px"
    min-width="290px"
  >
    <v-text-field
      slot="activator"
      v-model="time"
      label="Picker in menu"
      prepend-icon="access_time"
      readonly
    />
    <v-time-picker
      v-if="menu"
      v-model="time"
      full-width
      @change="$refs.menu.save(time)"
    />
  </v-menu>
